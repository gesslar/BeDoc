{
  "name": "bedoc",
  "version": "1.0.0",
  "description": "Pluggable documentation engine for any language and format",
  "main": "./src/core/Core.js",
  "bin": {
    "bedoc": "./src/cli.js"
  },
  "type": "module",
  "scripts": {
    "mock": "node ./src/cli.js -c wip/bedoc.json",
    "docs:build": "cd docs && bundle exec jekyll build",
    "docs:serve": "cd docs && bundle exec jekyll serve",
    "lint:check": "npx eslint .",
    "lint:fix": "npx eslint . --fix"
  },
  "bedoc": {
    "config": "./wip/bedoc.json"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "D": "^1.0.0",
    "eslint-plugin-jsdoc": "^50.6.1",
    "globby": "^14.0.2",
    "micromatch": "^4.0.8"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^2.12.1",
    "eslint": "^9.18.0"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "bedoc.generate",
        "title": "Generate Documentation"
      }
    ]
  },
  "keywords": [
    "documentation",
    "plugin",
    "parser",
    "printer"
  ],
  "author": "gesslar",
  "license": "Unlicense"
}
