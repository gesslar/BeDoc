{
  "name": "bedoc",
  "version": "1.0.0",
  "description": "Pluggable documentation engine for any language and format",
  "main": "./src/core/core.js",
  "bin": {
    "bedoc": "./src/cli.js"
  },
  "type": "module",
  "scripts": {
    "test": "nyc mocha --recursive tests/**/*.test.js",
    "clean": "rimraf dist",
    "clean-all": "rimraf node_modules && rimraf package-lock.json && rimraf yarn.lock",
    "postinstall": "npm link",
    "mock": "node ./src/cli.js -c wip/bedoc.json",
    "docs:build": "cd docs && bundle exec jekyll build",
    "docs:serve": "cd docs && bundle exec jekyll serve",
    "lint:check": "npx eslint .",
    "lint:fix": "npx eslint . --fix"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "globby": "^14.0.2"
  },
  "devDependencies": {
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.1",
    "eslint": "^9.17.0",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "bedoc.generate",
        "title": "Generate Documentation"
      }
    ]
  },
  "keywords": [
    "documentation",
    "plugin",
    "parser",
    "printer"
  ],
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/**/*.test.js"
    ],
    "reporter": [
      "text",
      "html"
    ]
  },
  "author": "gesslar",
  "license": "Unlicense"
}
