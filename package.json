{
  "name": "bedoc",
  "version": "1.0.0",
  "description": "Pluggable documentation engine for any language and format",
  "main": "./src/core/core.js",
  "bin": {
    "bedoc": "./src/cli.js"
  },
  "type": "module",
  "scripts": {
    "mock": "node ./src/cli.js -c wip/bedoc.json",
    "docs:build": "cd docs && bundle exec jekyll build",
    "docs:serve": "cd docs && bundle exec jekyll serve",
    "lint:check": "npx eslint .",
    "lint:fix": "npx eslint . --fix"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "globby": "^14.0.2"
  },
  "devDependencies": {
    "eslint": "^9.17.0"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "bedoc.generate",
        "title": "Generate Documentation"
      }
    ]
  },
  "keywords": [
    "documentation",
    "plugin",
    "parser",
    "printer"
  ],
  "author": "gesslar",
  "license": "Unlicense"
}
