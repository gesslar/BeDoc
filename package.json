{
  "name": "bedoc",
  "version": "1.0.0",
  "description": "Pluggable documentation engine for any language and format",
  "main": "src/core/engine.js",
  "bin": {
    "bedoc": "./src/cli.js"
  },
  "type": "module",
  "scripts": {
    "test": "nyc mocha --recursive src/**/*.test.mjs",
    "build": "tsc",
    "package": "vsce package",
    "mock": "bedoc -c wip/bedoc.json"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "globby": "^14.0.2"
  },
  "devDependencies": {
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.1",
    "eslint": "^9.17.0",
    "mocha": "^11.0.1",
    "nyc": "^17.1.0",
    "vsce": "^2.15.0"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "bedoc.generate",
        "title": "Generate Documentation"
      }
    ]
  },
  "keywords": [
    "documentation",
    "plugin",
    "parser",
    "printer"
  ],
  "nyc": {
    "include": ["src/**/*.js"],
    "exclude": ["src/**/*.test.js"],
    "reporter": ["text", "html"]
  },
  "author": "gesslar",
  "license": "Unlicense"
}
