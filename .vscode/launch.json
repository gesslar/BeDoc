{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug BeDoc CLI - LPC to Markdown",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.js",
      "args": [
        "--debug",
        "--debugLevel",
        "1",
        "--input",
        "examples/source/lpc/**/*.c",
        "--output",
        "examples/output/markdown/",
        "--language",
        "lpc",
        "--format",
        "markdown",
        "--hooks",
        "examples/hooks/lpc-markdown-hooks.js"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug BeDoc CLI - LPC to Wikitext",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.js",
      "args": [
        "--debug",
        "--debugLevel",
        "1",
        "--input",
        "examples/source/lpc/**/*.c",
        "--output",
        "examples/output/wikitext/",
        "--language",
        "lpc",
        "--format",
        "wikitext",
        "--hooks",
        "examples/hooks/lpc-wikitext-hooks.js",
        "--maxConcurrent",
        "50"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug BeDoc CLI - LPC to Wikitext (with upload)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.js",
      "args": [
        "--debug",
        "--debugLevel",
        "4",
        "--input",
        "examples/source/lpc/**/*.c",
        "--output",
        "examples/output/wikitext/",
        "--language",
        "lpc",
        "--format",
        "wikitext",
        "--hooks",
        "examples/hooks/lpc-wikitext-hooks-with-upload.js",
        "--maxConcurrent",
        "50"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug BeDoc CLI - Lua to Markdown",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/cli.js",
      "args": [
        "--debug",
        "--debugLevel",
        "1",
        "--input",
        "examples/source/lua/**/*.lua",
        "--output",
        "examples/output/markdown/",
        "--language",
        "lua",
        "--format",
        "markdown",
        "--hooks",
        "examples/hooks/lua-markdown-hooks.js"
      ],
      "console": "integratedTerminal"
    }
  ]
}
